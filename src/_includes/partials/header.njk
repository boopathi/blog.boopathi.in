{% from "partials/icon.njk" import icon %}

<div class="site-head-container">

  <a id="nav-burger" class="nav-burger" href="/" rel="popup">
    <div class="hamburger hamburger--collapse" aria-label="Menu" role="button" aria-controls="navigation">
      <div class="hamburger-box">
        <div class="hamburger-inner"></div>
      </div>
    </div>
  </a>

  <div class="site-head-left"></div>

  <div class="site-head-center">
    <a class="site-head-logo" href="/">
      <img class="logo-img" src="{{ site.logo }}" alt="{{ site.title }}">
    </a>
  </div>

  <div class="site-head-right">
    <div class="social-links">
      {% if site.twitter %}
        <a href="https://twitter.com/{{ site.twitter | replace("@", "") }}" class="site-nav-item" target="_blank" rel="noopener noreferrer">
          Twitter
        </a>
      {% endif %}
      {% if site.github %}
        <a href="https://www.github.com/{{ site.github }}" class="site-nav-item" target="_blank" rel="noopener noreferrer">
          Facebook
        </a>
      {% endif %}
      <a class="site-nav-item" href="https://feedly.com/i/subscription/feed/{{ site.url }}/rss/" target="_blank" rel="noopener noreferrer">
        RSS
      </a>
    </div>
  </div>
</div>

